<html>
    <%- include("partials/header.ejs") %>

    <body>

        
        <div>
            <h1>Choose Your Own Cocktail</h1>
            <form action="/cocktail" method="POST" class="buttons">
                <button type="submit" id="wine"value="wine" name="choice">🍷 WINE</button>
                <button type="submit" id="gin" value="gin" name="choice" >🍸 GIN</button>
                <button type="submit" id="whiskey" value="whiskey" name="choice">🥃 whiskey</button>
                <button type="submit" id="beer" value="beer" name="choice">🍺 BEER</button>
                <button type="submit" id="champagne" value="champagne" name="choice">🥂 champagne</button>
                <button type="submit" id="rum" value="rum" name="choice">🍹 rum</button>
              </form>

              <% if (locals.DrinkType) {%>
                <%= DrinkType.strDrink %>
                <h4>Ingredients</h4>
                <% for (let index = 0; index < 15; index++) {
                    if ( DrinkType["strIngredient"+index] !== null) { %>
                        <%-  DrinkType["strIngredient"+index]  %>
                        <br>
                        <% } %>
                    <% } %>
            <%} %>
        </div>

    </body>
    
    <%- include("partials/footer.ejs") %>
</html>

